{
  "name": "vue-coloris",
  "version": "0.0.1",
  "description": "Vue 3 wrapper for Coloris",
  "keywords": [
    "vue",
    "vue 3",
    "color picker",
    "coloris"
  ],
  "homepage": "https://github.com/bastien-j/vue-coloris",
  "bugs": {
    "url": "https://github.com/bastien-j/vue-coloris/issues"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/"
  ],
  "main": "./dist/vue-coloris.umd.cjs",
  "module": "./dist/vue-coloris.js",
  "exports": {
    ".": {
      "import": "./dist/vue-coloris.js",
      "require": "./dist/vue-coloris.umd.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "types": "./dist/types.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only generate:types",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "generate:types": "vue-tsc --declaration --emitDeclarationOnly --outdir ./dist",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@melloware/coloris": "^0.19.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.3",
    "@vitejs/plugin-vue": "^4.2.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.39.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.11.0",
    "jsdom": "^21.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "typescript": "~4.8.4",
    "vite": "^4.3.3",
    "vitest": "^0.29.8",
    "vue-tsc": "^1.6.1"
  }
}
